numerador1=int(input("Diga el numero para el numerador 1: "))
numerador2=int(input("Diga el numero para el numerador 2: "))
denominador1=int(input("Diga un numero para el denominador 1: "))
denominador2=int(input("Diga un numero para el denominador 2: "))
def NumN(x):
    if x != 0:
        return x
    else:
        x = int(input("ERROR ingrese otro valor: "))
        return NumN(x)
class operaciones:
  def metodos(self,num1,num2,num3,num4):
    self.num1=num1
    self.num2=num2
    self.num3=num3
    self.num4=num4


  def suma_d_fracc(self):
    numeradortotal = (self.num1 * self.num4) + (self.num3 * self.num2 )
    denominadortotal = self.num2 * self.num4
    print(f"{numeradortotal}/{denominadortotal}")

  def restar_fracc(self):
    num1 = (self.num1 * self.num4) - (self.num3 * self.num2)
    num2 = self.num2 * self.num4
    print(f"{num1}/{num2}")

  def mult_fracc(self):
    num1 = self.num1 * self.num3
    num2 = self.num2 * self.num4
    print(f"{num1}/{num2}")


  def div_fracc(self):
    num1 = self.num1 * self.num4
    num2 = self.num2 * self.num3
    print(f"{num1}/{num2}")

class ejecutar:
    def main(self):
        NumN(denominador1)
        NumN(denominador2)
        operacionconfracciones=operaciones(numerador1, denominador1, numerador2, denominador2)
        operacionconfracciones.suma_d_fracc
        operacionconfracciones.restar_fracc
        operacionconfracciones.mult_fracc
        operacionconfracciones.div_fracc
ejec=ejecutar
ejec.main
